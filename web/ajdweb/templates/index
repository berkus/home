{# -*- mode: jinja -*- #}
{% extends "base" %}

{% macro link(url, title) %}
   <a href="{{'/' + url}}">{{title}}</a>
{% endmacro %}

{% block content %}
 {{ icon(url) }}  
 <dl>
  {% for p in index | sort (attribute='date', reverse=True) %}
     <dt> {{ link(p.url, p.title) }} <span class='date'> {{ p.date.strftime('%d %b, %Y') }}</span> </dt>
     <dd> {{ p.summary }} </dd>
  {% endfor %}
 </dl>
{% endblock %}